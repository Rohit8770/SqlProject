<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/_10ssp"
    android:layout_height="wrap_content">




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/_5ssp"
        android:elevation="@dimen/_7ssp"
        android:padding="10sp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white">
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_115sdp"
            android:layout_height="1sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date           :"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:layout_marginLeft="9sp"
            android:layout_marginTop="@dimen/_20ssp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time          :"
            android:textStyle="italic"
            android:layout_marginLeft="9sp"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_53sdp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description    :"
            android:textStyle="italic"
            android:layout_marginLeft="8sp"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp"
            android:layout_marginTop="@dimen/_88sdp" />


        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="date"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_87sdp"
            android:layout_marginTop="@dimen/_20ssp"/>

        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint= "time"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_52sdp"
            android:layout_marginLeft="@dimen/_87ssp"/>
        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_marginTop="@dimen/_87sdp"
            android:layout_marginLeft="@dimen/_89sdp"/>

<!--
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="@dimen/_7ssp"
            android:elevation="@dimen/_7ssp"
          >-->


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/bd"
            android:elevation="@dimen/_7ssp"
            app:cardCornerRadius="@dimen/_7ssp"
            android:layout_marginTop="@dimen/_15ssp"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/_15ssp">

            <ImageView
                android:id="@+id/btnMark"
                android:layout_width="40dp"
                android:layout_height="35sp"
                android:src="@drawable/checkmark"/>
        </androidx.cardview.widget.CardView>


       <!-- </androidx.cardview.widget.CardView>-->

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="@dimen/_7ssp"
            android:elevation="@dimen/_7ssp"
            android:layout_marginTop="@dimen/_50ssp"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/_15ssp">

            <ImageView
                android:id="@+id/btnEdit"
                android:layout_width="40dp"
                android:layout_height="35sp"
                android:src="@drawable/edit"/>
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/_18ssp"
            android:layout_marginTop="@dimen/_87ssp"
            android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_7ssp"
            android:elevation="@dimen/_7ssp">
            <ImageView
                android:id="@+id/btnDelete"
                android:layout_width="35dp"
                android:layout_height="37dp"
                android:src="@drawable/delete"/>
        </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
