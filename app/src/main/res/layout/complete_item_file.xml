<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/_10ssp"
    android:layout_height="wrap_content">




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/_5ssp"
        android:elevation="@dimen/_7ssp"
        android:padding="10sp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white">
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_115sdp"
            android:layout_height="1sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date           :"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:layout_marginLeft="9sp"
            android:layout_marginTop="@dimen/_10ssp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time          :"
            android:textStyle="italic"
            android:layout_marginLeft="9sp"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_43sdp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description    :"
            android:textStyle="italic"
            android:layout_marginLeft="8sp"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp"
            android:layout_marginTop="@dimen/_78sdp" />


        <TextView
            android:id="@+id/Comdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="date"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_87sdp"
            android:layout_marginTop="@dimen/_10ssp"/>

        <TextView
            android:id="@+id/ComTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint= "time"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_42sdp"
            android:layout_marginLeft="@dimen/_87ssp"/>
        <TextView
            android:id="@+id/ComDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_marginTop="@dimen/_77sdp"
            android:layout_marginLeft="@dimen/_89sdp"/>

        <!--
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="@dimen/_7ssp"
                    android:elevation="@dimen/_7ssp"
                  >-->


        <androidx.cardview.widget.CardView
            android:layout_width="27dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_91sdp"
            android:layout_marginRight="@dimen/_5ssp"
            android:elevation="@dimen/_7ssp"
            app:cardCornerRadius="@dimen/_7ssp">

            <ImageView
                android:id="@+id/btnMark"
                android:layout_width="30dp"
                android:layout_height="30sp"
                android:src="@drawable/right_done_mark" />
        </androidx.cardview.widget.CardView>


        <!-- </androidx.cardview.widget.CardView>-->


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:text="Completed...."
            android:textSize="17sp"
            android:layout_marginTop="@dimen/_94ssp"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/_30ssp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/_18ssp"
            android:layout_marginTop="@dimen/_30ssp"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_7ssp"
                android:elevation="@dimen/_7ssp">
                <ImageView
                    android:id="@+id/buttonDelete"
                    android:layout_width="35dp"
                    android:layout_height="37dp"
                    android:src="@drawable/delete"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
